<section class="section">
	<h2>Icons</h2>
	
	<div class="subsection">
		<h3>Icon Sizes</h3>
		<div class="icon-sizes">
			<div class="icon-size-demo">
				<h4>Small (16px)</h4>
				<div class="icon-row">
					<i class="ti ti-home icon-sm"></i>
					<i class="ti ti-user icon-sm"></i>
					<i class="ti ti-settings icon-sm"></i>
					<i class="ti ti-bell icon-sm"></i>
				</div>
				<code>.icon-sm</code>
			</div>
			<div class="icon-size-demo">
				<h4>Medium (24px)</h4>
				<div class="icon-row">
					<i class="ti ti-home icon-md"></i>
					<i class="ti ti-user icon-md"></i>
					<i class="ti ti-settings icon-md"></i>
					<i class="ti ti-bell icon-md"></i>
				</div>
				<code>.icon-md</code>
			</div>
			<div class="icon-size-demo">
				<h4>Large (32px)</h4>
				<div class="icon-row">
					<i class="ti ti-home icon-lg"></i>
					<i class="ti ti-user icon-lg"></i>
					<i class="ti ti-settings icon-lg"></i>
					<i class="ti ti-bell icon-lg"></i>
				</div>
				<code>.icon-lg</code>
			</div>
			<div class="icon-size-demo">
				<h4>Extra Large (48px)</h4>
				<div class="icon-row">
					<i class="ti ti-home icon-xl"></i>
					<i class="ti ti-user icon-xl"></i>
					<i class="ti ti-settings icon-xl"></i>
					<i class="ti ti-bell icon-xl"></i>
				</div>
				<code>.icon-xl</code>
			</div>
		</div>
	</div>

	<div class="subsection">
		<h3>Icon Usage Examples</h3>
		<div class="usage-examples">
			<div class="usage-example">
				<h4>Buttons with Icons</h4>
				<div class="button-examples">
					<button class="btn btn-primary">
						<i class="ti ti-plus"></i>
						New Project
					</button>
					<button class="btn btn-outline">
						<i class="ti ti-download"></i>
						Download
					</button>
					<button class="btn btn-ghost">
						<i class="ti ti-settings"></i>
						Settings
					</button>
					<button class="btn btn-error">
						<i class="ti ti-trash"></i>
						Delete
					</button>
				</div>
			</div>

			<div class="usage-example">
				<h4>Navigation Items</h4>
				<div class="nav-examples">
					<a href="#" class="nav-item">
						<i class="ti ti-home"></i>
						<span>Dashboard</span>
					</a>
					<a href="#" class="nav-item">
						<i class="ti ti-folder"></i>
						<span>Projects</span>
					</a>
					<a href="#" class="nav-item">
						<i class="ti ti-users"></i>
						<span>Team</span>
					</a>
					<a href="#" class="nav-item">
						<i class="ti ti-settings"></i>
						<span>Settings</span>
					</a>
				</div>
			</div>

			<div class="usage-example">
				<h4>Status Indicators</h4>
				<div class="status-examples">
					<div class="status-item status-success">
						<i class="ti ti-circle-check"></i>
						<span>Build Successful</span>
					</div>
					<div class="status-item status-warning">
						<i class="ti ti-alert-triangle"></i>
						<span>Build Warning</span>
					</div>
					<div class="status-item status-error">
						<i class="ti ti-x"></i>
						<span>Build Failed</span>
					</div>
					<div class="status-item status-loading">
						<i class="ti ti-loader icon-spin"></i>
						<span>Building...</span>
					</div>
				</div>
			</div>

			<div class="usage-example">
				<h4>Icon Only Buttons</h4>
				<div class="icon-button-examples">
					<button class="icon-btn" title="Edit">
						<i class="ti ti-edit"></i>
					</button>
					<button class="icon-btn" title="Share">
						<i class="ti ti-share"></i>
					</button>
					<button class="icon-btn" title="More options">
						<i class="ti ti-dots"></i>
					</button>
					<button class="icon-btn" title="Favorite">
						<i class="ti ti-heart"></i>
					</button>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.icon-sizes {
		display: grid;
		gap: var(--space-6);
	}

	.icon-size-demo {
		padding: var(--space-4);
		background: white;
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow-sm);
	}

	.icon-size-demo h4 {
		margin-bottom: var(--space-3);
		color: var(--color-gray-700);
		font-size: var(--font-size-base);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.icon-row {
		display: flex;
		gap: var(--space-4);
		align-items: center;
		margin-bottom: var(--space-2);
	}

	.icon-size-demo code {
		font-size: var(--font-size-xs);
		color: var(--color-gray-500);
		background: var(--color-gray-100);
		padding: var(--space-1) var(--space-2);
		border-radius: var(--radius-sm);
	}

	/* Icon Size Classes */
	.icon-sm { font-size: 16px; }
	.icon-md { font-size: 24px; }
	.icon-lg { font-size: 32px; }
	.icon-xl { font-size: 48px; }

	.usage-examples {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: var(--space-6);
	}

	.usage-example {
		padding: var(--space-6);
		background: white;
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow-sm);
	}

	.usage-example h4 {
		margin-bottom: var(--space-4);
		color: var(--color-gray-700);
		font-size: var(--font-size-base);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.button-examples {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-3);
	}

	.button-examples .btn {
		display: flex;
		align-items: center;
		gap: var(--space-2);
	}

	.nav-examples {
		display: flex;
		flex-direction: column;
		gap: var(--space-2);
	}

	.nav-item {
		display: flex;
		align-items: center;
		gap: var(--space-3);
		padding: var(--space-3) var(--space-4);
		color: var(--color-gray-700);
		text-decoration: none;
		border-radius: var(--radius-base);
		transition: var(--transition-base);
	}

	.nav-item:hover {
		background: var(--color-primary-50);
		color: var(--color-primary-700);
	}

	.nav-item i {
		font-size: 20px;
	}

	.status-examples {
		display: flex;
		flex-direction: column;
		gap: var(--space-3);
	}

	.status-item {
		display: flex;
		align-items: center;
		gap: var(--space-2);
		padding: var(--space-3) var(--space-4);
		border-radius: var(--radius-base);
		font-size: var(--font-size-sm);
		font-weight: var(--font-weight-medium);
	}

	.status-success {
		background: var(--color-success);
		color: white;
	}

	.status-warning {
		background: var(--color-warning);
		color: white;
	}

	.status-error {
		background: var(--color-error);
		color: white;
	}

	.status-loading {
		background: var(--color-primary-100);
		color: var(--color-primary-700);
	}

	.icon-button-examples {
		display: flex;
		gap: var(--space-3);
		flex-wrap: wrap;
	}

	.icon-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border: 1px solid var(--color-gray-300);
		border-radius: var(--radius-base);
		background: white;
		color: var(--color-gray-600);
		cursor: pointer;
		transition: var(--transition-base);
	}

	.icon-btn:hover {
		background: var(--color-primary-50);
		border-color: var(--color-primary-300);
		color: var(--color-primary-600);
		transform: translateY(-1px);
	}

	.icon-btn i {
		font-size: 18px;
	}

	/* Icon Animations */
	.icon-spin {
		animation: spin 1s linear infinite;
	}

	@keyframes spin {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	@media (max-width: 768px) {
		.usage-examples {
			grid-template-columns: 1fr;
		}

		.button-examples {
			flex-direction: column;
		}

		.button-examples .btn {
			width: 100%;
			justify-content: center;
		}

		.icon-button-examples {
			justify-content: center;
		}
	}
</style>