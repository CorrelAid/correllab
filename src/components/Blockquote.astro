---
const { id, wide, bare } = Astro.props;
---

<blockquote data-step-id={id || null} class:list={[wide && 'wide', bare && 'bare']}>
  <div class="quote"><slot /></div>
  <cite>
    <slot name="cite" />
  </cite>
</blockquote>

<style>
  blockquote {
    /* ch is font-size-relative */
    max-width: var(--narrow-content-width);
    /* max-width: 40ch; */
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-lab-blue-dark);
    margin-left: auto;
    margin-right: auto;
    margin-bottom: var(--space-4);
    line-height: var(--line-height-tight);
    display: flex;
    flex-direction: column;
    gap: 1rem;

    &.wide {
      max-width: 100%;
    }

    &:not(.bare) {
      &::before {
      content: 'â€œ';
      display: block;
      font-size: 96px;
      font-weight: var(--font-weight-black);
      margin-bottom: -3rem;
      color: var(--color-lab-blue-medium);
    }

    & cite {
      font-size: var(--font-size-base);
      font-weight: var(--font-weight-light);
      display: flex;
      flex-direction: column;
      gap: 0rem;

      & .name {
        font-weight: var(--font-weight-bold);
      }
    }
  }
</style>
