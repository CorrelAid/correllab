---
export interface Props {
  title: string;
  group: string;
}

let { title, group = 'submenu' } = Astro.props;
---

<details name={group}>
  <summary>{title}</summary>
  <div class="submenu">
    <ul>
      <li>
        <a href="/">CorrelLAB</a>
      </li>
      <li>
        <a href="/">CorrelLAB</a>
      </li>
      <li>
        <a href="/">CorrelLAB</a>
      </li>
      <li>
        <a href="/">CorrelLAB</a>
      </li>
    </ul>
  </div>
</details>

<style>
  details {
    position: relative;

    /* replace default marker with element at the end of the summary */
    & summary {
      list-style: none;

      &::marker {
        display: none;
      }

      &::after {
        /* down pointing hollow arrow */
        content: '';
        display: inline-block;
        width: 1rem;
        height: 1rem;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 15 l-6-6-6 6"/></svg>');
        background-size: contain;
        background-repeat: no-repeat;
      }
    }

    & .submenu {
      position: absolute;
      background: white;
      min-width: 100%;
      padding: 0 0.5rem 0.5rem 0.5rem;

      & ul {
        list-style: none;
        padding: 0;
        margin: 0;

        & li {
          padding: 0.25rem 0;

          & a {
            color: inherit;
            text-decoration: none;
          }
        }
      }
    }
  }
</style>
