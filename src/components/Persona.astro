---
export interface Props {
  name: string;
  role: string;
  image: string;
  email?: string;
}

import LinkButton from '@components/LinkButton.astro';
import MailIcon from '@assets/svg/icons/mail.svg';

const { name, role, image, email } = Astro.props;
---

<div class="persona">
  <div class="persona-image vignette">
    {image && <img class="" src={image} alt={name} />}
    {!image && <div class="persona-image-placeholder vignette" />}
  </div>
  <div class="persona-content">
    <div class="flex rows gap-2">
      <h4>{name}</h4>
      <p class="persona-role">{role}</p>
    </div>
    {
      email && (
        <LinkButton href={`mailto:${email}`} classes={'btn btn-icon btn-sm email-button'}>
          <MailIcon height={'20'} /> Mail an lab@correlaid.org
        </LinkButton>
      )
    }
  </div>
</div>

<style>
  .persona {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 400px;
    margin: 0 auto;
    padding: 2rem;
    gap: 1rem;

    .persona-image {
      width: 100%;
      position: relative;

      img {
        position: relative;
        width: 100%;
        height: auto;
        aspect-ratio: 1/1;
        border-radius: 50%;
        object-fit: cover;
        z-index: -1;

        /* &::before {
          content: '';
          position: absolute;
          inset: 0;
          border-radius: 500px;
          padding: 10px;
          background: linear-gradient(45deg, red, blue);
          mask:
            linear-gradient(#000 0 0) content-box,
            linear-gradient(#000 0 0);
          mask-composite: exclude;
        } */
      }

      .persona-image-placeholder {
        position: relative;
        width: 100%;
        height: 100%;
        aspect-ratio: 1/1;
        background: var(--color-gray-200);
        border-radius: 50%;
      }
    }

    .vignette {
      &::before {
        content: '';
        z-index: 0;
        position: absolute;
        inset: 0;
        border-radius: 500px;
        padding: 10px;
        background: linear-gradient(
          45deg,
          var(--color-lab-pink-medium),
          var(--color-lab-blue-medium)
        );
        mask:
          linear-gradient(#000 0 0) content-box,
          linear-gradient(#000 0 0);
        mask-composite: exclude;
      }
    }

    .persona-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;

      h4 {
        font-size: 2rem;
        margin: 0 auto;
        line-height: 1.1;
        white-space: nowrap;
      }

      p {
        font-size: 1rem;
        color: var(--color-key);
        margin: 0;
        font-weight: 500;
        line-height: 1;
      }
    }
  }
</style>
