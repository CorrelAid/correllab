---
import CorrelLabKompaktDynamic from '@assets/branding/lab/Monochrom/CorrelLab kompakt_dynamic_fill.svg';
import CorrelLabLogoMin from '@assets/branding/lab/Monochrom/CorrelLab C.svg';
import LinkButton from '@components/LinkButton.astro';
import MailIcon from '@assets/svg/icons/mail.svg';
---

<div class="container">
  <div class="brand">
    <CorrelLabKompaktDynamic class="logo-desktop" height={'80'} color="var(--color-lab-muted)" />
    <CorrelLabLogoMin class="logo-mobile" width={'24'} color="var(--color-lab-muted)" />
  </div>
  <div class="prose content-box narrow">
    <h2 class="light"><slot name="title">Ihr habt Fragen?</slot></h2>
    <div class="body">
      <slot name="body">
        <p class="light">
          Kontaktiert uns gerne für ein unverbindliches Erstgespräch.
        </p>
      </slot>
    </div>
    <slot name="cta">
      <LinkButton
        variant="btn-light"
        href="mailto:lab@correlaid.org?subject=CorrelLAB"
        classes="btn-icon"><MailIcon height={'20'} /> Nachricht schreiben</LinkButton
      ></slot
    >
  </div>
</div>

<style>
  .container {
    background: var(--color-lab-blue-dark);
    container: banner / inline-size;
    width: 100%;
    color: var(--color-white);
    display: grid;
    grid-template-columns: auto auto;
    justify-content: center;
    align-items: center;
    padding: calc(2 * var(--padding)) var(--padding);
    gap: var(--padding);

    & .prose {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      gap: 1rem;
    }

    & a {
      color: var(--color-white);
      text-decoration: underline;
    }

    & .logo-desktop {
      display: block;
    }

    & .logo-mobile {
      display: none;
    }

    @container banner (max-width: 450px) {
      & .logo-desktop {
        display: none;
      }

      & .logo-mobile {
        display: block;
        min-width: 24px;
      }
    }
  }
</style>
