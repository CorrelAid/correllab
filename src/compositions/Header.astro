---
const { pathname } = Astro.url;
import AidLinkButton from '@/components/AidLinkButton.astro';
import EventTeaser from '@/components/EventTeaser.astro';
import CorrelLabLogoWide from '@assets/branding/lab/Main/CorrelLab horizontal.svg';
---

<header>
  <div class="brand">
    <a href={pathname === '/' ? '#intro' : '/'} aria-label="ZurÃ¼ck zur Startseite">
      <CorrelLabLogoWide height={'36'} alt="CorrelLab Logo" />
    </a>
  </div>
  {
    /* <div class="desktop">
    <EventTeaser />
  </div> */
  }
  {/* <NavigationMain /> */}
  {/* <NavigationCompact /> */}
  <div class="corner">
    <AidLinkButton href="https://correlaid.org">Zu CorrelAid</AidLinkButton>
  </div>
</header>

<style>
  header {
    container: header / inline-size;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    gap: 0.5rem;
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: #fff;

    & .brand {
      min-width: 0;
      min-height: auto;
      max-height: 50px;
      background: white;
      display: flex;
      justify-content: flex-start;
      align-items: center;
    }

    & .corner {
      display: flex;
      gap: 0rem;

      & button {
        all: unset;
        padding: 0.25rem 0.5rem;
      }

      & button:first-of-type {
        background-color: var(--color-lab-blue-light);
        color: #fff;
        border-radius: 0.5rem 0 0 0.5rem;
      }

      & button:last-of-type {
        background-color: var(--color-lab-pink-medium);
        border-radius: 0 0.5rem 0.5rem 0;
      }
    }
  }
</style>
