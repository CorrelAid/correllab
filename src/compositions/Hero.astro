---
import CorrelLabLogoWide from '@assets/branding/lab/Monochrom/CorrelLab horizontal.svg';
import Background from './Hero/Background.astro';
import LabLinkButton from '@components/LabLinkButton.astro';
import AidLinkButton from '@components/AidLinkButton.astro';
---

<section id="intro" class="hero" data-mode="lab">
  <Background />
  <div class="content-box">
    <div class="hero-inner">
      <h1 class="hero-title flex align-center">
        <span class="brand">
          <!-- <CorrelaidLogoMin height={'4rem'} /> -->
          <CorrelLabLogoWide fill="white" height={'4rem'} class="bg-contrast-shadow" />
        </span>
        <!-- CorrelLAB -->
      </h1>
      <h3 class="hero-subtitle"><slot name="subtitle" /></h3>
      <div class="hero-teaser txt-stroke-dark flex rows gap-2">
        <slot name="teaser" />
      </div>
      <div class="hero-cta">
        <slot name="cta" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    /* padding-top: 0; */
    /* padding-top: 2rem; */
    /* padding-bottom: 2rem; */
    /* space for clip path */
    /* padding-bottom: 80px; */
    /* margin-bottom: -80px; */

    .content-box {
      --content-width: 1200px;
    }

    & .hero-inner {
      position: relative;
      z-index: 1;
      width: 100%;
      max-width: min(max(300px, 60ch), 100%);
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding-top: 3rem;
      padding-bottom: 3rem;

      & .hero-title {
        font-size: clamp(2rem, 20vw, 4rem);
        font-weight: 700;
        color: #fff;
      }

      & .hero-subtitle {
        font-weight: 500;
        color: var(--color-gray-800);
      }

      & .hero-cta {
        margin-top: 0.5rem;
        display: flex;
        justify-content: flex-start;
        flex-wrap: wrap;
        gap: 0.5rem 1rem;
      }
    }
  }
</style>
