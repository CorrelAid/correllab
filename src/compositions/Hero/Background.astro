---
import Circles from '@assets/branding/agentur/CL-Circles.svg';
---

<div class="background">
  <div class="gradient-layer"></div>
  <div class="overlay-layer">
    <Circles height={'100%'} class="circles" />
  </div>
</div>

<style>
  .background {
    container: background / inline-size;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;

    & .overlay-layer {
      --offset: 50%;

      position: relative;
      top: 0;
      right: 0;
      width: max(66%, 600px);
      height: 100%;
      padding: var(--padding);
      transform: translateX(var(--offset)) rotate(0deg);
      transition:
        width 0.5s cubic-bezier(0.39, 0.575, 0.565, 1),
        height 0.5s cubic-bezier(0.39, 0.575, 0.565, 1),
        transform 0.5s cubic-bezier(0.39, 0.575, 0.565, 1);
      /* outline: 1px solid red; */

      & .circles {
        position: absolute;
        max-height: 60%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        transform-origin: center;
        animation: rotate 360s linear infinite;
        /* outline: 1px solid blue; */
      }

      @container (max-width: 799px) {
        --offset: 33%;

        /* height: 50%; */
        top: 0;
        width: 100%;
        max-width: unset;
        aspect-ratio: 1/1;

        & .circles {
          max-height: 66%;
          top: 20%;
        }
      }
    }

    & .gradient-layer {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0.6;
      background: linear-gradient(65deg, var(--color-lab-blue-light), var(--color-lab-pink-medium));
      clip-path: ellipse(2000px 100% at 30% 0%);
    }
  }

  /* define rotate animation with keyframes */
  @keyframes rotate {
    from {
      transform: translate(-50%, -50%) rotate(0deg);
    }

    to {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }
</style>
