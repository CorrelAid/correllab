---
import Layout from './Layout.astro';
import Hero from '@compositions/Hero.astro';

import LabLinkButton from '@components/LabLinkButton.astro';
import LinkButton from '@components/LinkButton.astro';

const { title = 'CorrelLAB' } = Astro.props;
---

<Layout title={title}>
  <Hero>
    <Fragment slot="subtitle"
      ><slot name="subtitle">
        Lernen, anwenden, bewirken –&nbsp;<strong>mit Daten Gutes schaffen</strong>.
      </slot>
    </Fragment>
    <Fragment slot="teaser"><slot name="teaser" /></Fragment>
    <Fragment slot="cta">
      <slot name="cta">
        <LabLinkButton href="#start">Zum Kurs</LabLinkButton>
        <LinkButton href="/">Zurück zur Übersicht</LinkButton>
      </slot>
    </Fragment>
  </Hero>

  <article class="container" id="start">
    <slot />
    <slot name="banner" />
    <slot name="footer-links" />
  </article>
</Layout>

<style></style>
