---
import '@styles/main.css';
import Header from '@compositions/Header.astro';
import Footer from '@compositions/Footer.astro';
import { ClientRouter } from 'astro:transitions';

export interface Props {
  title?: string;
}

const { title = 'CorrelLAB' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- og -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content="CorrelLAB" />
    <meta
      property="og:image"
      content={`${Astro.url.origin}/assets/correllab-social-og-image.png`}
    />
    <meta property="og:url" content="https://lab.correlaid.org" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="CorrelLAB" />
    <ClientRouter />
    <script defer data-domain="lab.correlaid.org" src="https://plausible.io/js/script.js"></script>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
