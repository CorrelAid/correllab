  </section>

  <ColumnsSection center_title>
    <h2 slot="title">Eure Ansprechpartner</h2>
    <Persona name="Max Mustermann" role="Data Scientist" slot="col1" email="max@mustermann.de" />
    <Persona name="Erika Mustermann" role="Data Engineer" slot="col2" email="erika@mustermann.de" />
  </ColumnsSection>
  <Banner slot="banner" />
